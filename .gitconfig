[user]
	name = AGiantSquid
	email = ashley.e.shultz@gmail.com
[alias]
	co = checkout
	c = commit
	cb = c -b
	b = branch
	s = status
	l = log
	ri = rebase -i
[core]
	filemode = false
	autocrlf = false

# by default, assume personal settings
[includeIf "gitdir:/c/**"]
  path = .gitconfig-personal

# for use on laptop, override default with gk stuff
[includeIf "gitdir:~/greenkey/*"]
  path = .gitconfig-work

# for use on the beast, override default with gk stuff
[includeIf "gitdir:/drive/**"]
	path = .gitconfig-work
